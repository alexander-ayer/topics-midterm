<section class="poster" id="change-password" style="margin-top: 18px;">
  <div class="poster-header">
    <h2 class="poster-title">Change Password</h2>
  </div>

  {{#if errors}}
    <ul class="error" style="margin: 10px 0; padding-left: 18px;">
      {{#each errors}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  {{/if}}

  <form action="/profile/password" method="POST">

    <div style="margin:10px; color: var(--muted); font-size:14px;">
      Warning: Changing your password will log you out everywhere.
    </div>

    <label style="display:block; margin-bottom:10px;">
      Current Password:
      <input type="password" name="currentPassword">
    </label>

    <label style="display:block; margin-bottom:10px;">
      New Password:
      <input type="password" name="newPassword">
    </label>

    <label style="display:block; margin-bottom:10px;">
      Confirm New Password:
      <input type="password" name="confirmNewPassword">
    </label>

    <div class="poster-actions">
      <button type="submit">Update Password</button>
    </div>

  </form>
</section>