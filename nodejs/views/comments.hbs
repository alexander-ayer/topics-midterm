<section class="poster">
  <div class="poster-header">
    <span class="poster-badge">WANTED</span>
    <h2 class="poster-title">All Comments</h2>
  </div>

  {{#if comments.length}}
    <ul class="feed">
      {{#each comments}}
        <li class="post">
          <div class="post-main">
            <span class="post-author">{{authorDisplayName}}</span>
            <span class="post-text">{{text}}</span>
          </div>

          <div class="post-meta">
            {{createdAt}}
          </div>
        </li>
      {{/each}}
    </ul>

    {{#if totalPages}}
        <div class="poster-actions" style="display:flex; justify-content:space-between; gap:12px;">
          {{#if hasPrev}}
            <a class="btn" href="/comments?page={{prevPage}}">← Prev</a>
          {{else}}
            <span></span>
          {{/if}}

          <div style="align-self:center; color: var(--muted);">
            Page {{page}} of {{totalPages}}
          </div>

          {{#if hasNext}}
            <a class="btn" href="/comments?page={{nextPage}}">Next →</a>
          {{else}}
            <span></span>
          {{/if}}
        </div>
    {{/if}}

  {{else}}
    <p class="empty">No posts yet.</p>
  {{/if}}

  <div class="poster-actions">
    {{#if isLoggedIn}}
      <a class="btn" href="/comment/new">Post a Comment</a>
    {{else}}
      <a class="btn" href="/login">Login to Post</a>
    {{/if}}
  </div>
</section>
