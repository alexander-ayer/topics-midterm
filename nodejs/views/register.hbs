<section class="poster">
  <div class="poster-header">
    <h2 class="poster-title">Register</h2>
  </div>

  {{#if errors}}
    <ul class="error" style="margin: 10px 0; padding-left: 18px;">
      {{#each errors}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  {{/if}}

  <form action="/register" method="POST" novalidate>
    <label style="display:block; margin-bottom:10px;">
      Username:
      <input
        type="text"
        name="username"
        value="{{username}}"
        required
        autocomplete="username"
      >
    </label>

    <label style="display:block; margin-bottom:10px;">
      Display Name:
      <input
        type="text"
        name="displayName"
        value="{{displayName}}"
        required
        autocomplete="nickname"
      >
    </label>

    <label style="display:block; margin-bottom:10px;">
      Email:
      <input
        type="email"
        name="email"
        value="{{email}}"
        required
        autocomplete="email"
      >
    </label>

    <label style="display:block; margin-bottom:10px;">
      Password:
      <input
        type="password"
        name="password"
        required
        autocomplete="new-password"
      >
    </label>

    <label style="display:block; margin-bottom:10px;">
      Confirm Password:
      <input
        type="password"
        name="confirmPassword"
        required
        autocomplete="new-password"
      >
    </label>

    <div class="poster-actions">
      <button type="submit">Create Account</button>
    </div>
  </form>
</section>