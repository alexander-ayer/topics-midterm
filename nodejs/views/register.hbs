<h1>Register</h1>

{{#if error}}
  <p style="color:red">{{error}}</p>
{{/if}}

<form action="/register" method="POST">
  <label>
    Username:
    <input type="text" name="username" value="{{username}}">
  </label>
  <br>
  <label>
    Password:
    <input type="password" name="password">
  </label>
  <br>
  <button type="submit">Create Account</button>
</form>
